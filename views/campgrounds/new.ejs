            <input class="form-control new-form" type="text" name="image" placeholder="Youtube Video URL">
    </div>
    <div class="form-group">
        <input class="form-control new-form" id="text-region" height="50px" type="text" name="description" placeholder="Description">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary">Submit</button>
    </div>
    </form>
</div>
</div>
</div>
