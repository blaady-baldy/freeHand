<%- include('../partials/header'); %>

<div class="container">
<div style="text-align: center; align-items: center;">
    <h1 style="text-align: center;">
        Edit <%=camp.name%>
    </h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
        <div class=" form-group">
            <input class="form-control" type="text" name="campground[name]" value="<%=camp.name%>">
    </div>
    <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" value="<%=camp.image%>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="campground[description]"  value="<%=camp.description%>">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-success">Update</button>
    </div>
    </form>
</div>
</div>
</div>
<%- include('../partials/footer'); %>